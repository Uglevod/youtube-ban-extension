{
  "manifest_version": 2,
  "name": "YouTube Ban Extension",
  "version": "1.0.0",
  "description": "Browser extension to ban videos and channels on YouTube with compact UI",
  "homepage_url": "https://github.com/Uglevod/youtube-ban-extension",
  
  "permissions": [
    "storage",
    "activeTab",
    "*://*.youtube.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "YouTube Ban Manager",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon48.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon48.png",
    "48": "icons/icon48.png",
    "64": "icons/icon48.png",
    "96": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "applications": {
    "gecko": {
      "id": "youtube-ban-extension@uglevod.github.io",
      "strict_min_version": "78.0"
    }
  },
  
  "content_security_policy": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline';",
  
  "web_accessible_resources": [
    "icons/*.png"
  ]
}
